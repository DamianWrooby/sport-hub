datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model savedUnits {
  id          Int     @id @unique
  activity    String
  distance    Int
  duration    Int
  intensity   Int
  description String?
  date        String
  timestamp   String @default("none")
}

model scheduledUnits {
  dayID       String  @id @unique
  activity    String
  distance    Int
  duration    Int
  intensity   Int
  description String?
}
